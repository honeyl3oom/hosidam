<div class="portlet box">
  <div class="portlet-body form">
    <form class="form-horizontal" role="form">
      <div class="form-body">
        <div class="form-group">
          <label class="col-md-3 control-label">이미지</label>
          <div class="col-md-9">
            <div class="image" ng-style="{'background-image':'url({{request_form.image.url}})'}" ng-if="!gh.blank(request_form.image.url)"></div>
            <div class="file-status" ng-show="!gh.blank(attach_file)">새로 첨부한 파일 : {{attach_file}}</div>
            <button type="button" class="btn blue" ng-click="click_file()">첨부하기</button>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-3 col-md-9">
            <button type="button" class="btn green" ng-click="submit(request_form)">Submit</button>
            <button type="button" class="btn default" url="<%=admin_main_image_index_path%>">Cancel</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="hidden">
<%= form_for [obj], url: url, role:"form", html:{class:"main-image-form",  multipart:true}, method: method do |f| %>
  <input type="file" class="file-input" name="image_file">
<% end %>
</div>

